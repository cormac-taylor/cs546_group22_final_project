<article class="signin-container sign-container">
    <h2>Login Form</h2>
    <form action="/signin" method="POST" id="signin-form">
        <div class="inputs">
            <div>
                <label for="username">Username:</label>
                <br>
                <input type="text" id="username" name="username" value="{{signin.username}}">
            </div>
            <div>
                <label for="password">Password:</label>
                <br>
                <input type="password" id="password" name="password">
            </div>
        </div>
        <div>
            <button type="submit" id="submitButton">Login</button>
        </div>
        {{#if hasErrors}}
        <ul class="error-list">
            {{#each errors}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
        {{/if}}
        <ul class="error-list" id="client-error-list" hidden></ul>
    </form>
    <p>Don't have an account? <a href="/signup">Sign up here</a>.</p>
    <script src="/public/js/signin.js" type="module"></script>
</article>