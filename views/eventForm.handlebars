<h1>Update Event Form</h1>

{{!-- <h1 id="eventId" name="eventId" hidden>{{eventId}}</h1> --}}
<form id="updateEventForm" action="/events/updateEventWithId" method="POST">
    <input type="hidden" id="eventId" name="eventId" value="{{eventId}}">
  <label for="eventName">Event Name:</label>
  <input type="text" id="eventName" name="eventName" placeholder="Enter new event name">
    <h2></h2>
  <label for="email">Email:</label>
  <input type="email" id="email" name="email" placeholder="Enter new email">
<h2></h2>
  <label for="location">Location:</label>
  <input type="text" id="location" name="location" placeholder="Enter new location">
<h2></h2>
  <label for="description">Description:</label>
  <textarea id="description" name="description" placeholder="Enter new description"></textarea>
<h2></h2>
  <button type="submit">Update Event</button>
</form>